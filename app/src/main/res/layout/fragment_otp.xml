<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_16">

    <androidx.appcompat.widget.AppCompatImageView
        android:clickable="true"
        android:id="@+id/backImage"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/ic_round_arrow_back_ios_24"
        tools:ignore="ContentDescription"
        android:focusable="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/sp_12"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_toStartOf="@+id/changeNumberText"
        tools:ignore="RelativeOverlap" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/changeNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_number"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentEnd="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/verificationHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backImage"
        android:layout_marginTop="@dimen/dp_32"
        android:gravity="center"
        android:text="@string/verification_code"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/sp_12" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verificationHeading"
        android:layout_marginBottom="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32"
        android:gravity="center"
        android:textColor="?attr/colorError"
        android:textSize="@dimen/sp_10" />

    <com.mukesh.OtpView
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/codeOtpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_64"
        android:layout_marginEnd="@dimen/dp_32"
        android:inputType="number"
        android:itemBackground="@color/blue_200"
        android:textColor="@color/grey_900"
        android:textColorHint="@color/grey_900"
        app:OtpItemCount="6"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold"
        app:OtpLineColor="?attr/colorPrimary"
        app:OtpViewType="line" />

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_8"
            android:text="@string/confirm"
            android:textColor="@color/white"
            app:cornerRadius='@dimen/dp_4'
            android:textSize="@dimen/sp_14" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_2"
            android:indeterminateTint="?attr/colorPrimary" />
    </FrameLayout>
</RelativeLayout>
