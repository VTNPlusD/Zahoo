<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <include
        layout="@layout/activity_splash"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:paddingHorizontal="@dimen/dp_32"
        android:paddingTop="@dimen/dp_32"
        android:padding="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/countryCodeSpinner"
            android:textColor="?attr/colorOnPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/countryCodeDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/countryCodeSpinner"
            android:layout_marginBottom="@dimen/dp_24"
            android:background="?attr/colorPrimaryVariant" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneNumberEdit"
            style="@style/Widget.Design.TextInputLayout"
            android:layout_below="@+id/countryCodeDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_phone"
            android:textColorHint="?attr/colorOnPrimary"
            app:errorEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                android:singleLine="true"
                android:textSize="@dimen/sp_14" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/submitFrame"
            android:layout_marginBottom="@dimen/dp_32"
            android:gravity="center"
            android:textColor="?attr/colorOnPrimary"
            android:text="@string/message_otp"
            android:textSize="@dimen/sp_12" />

        <FrameLayout
            android:id="@+id/submitFrame"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_8"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                app:cornerRadius='@dimen/dp_4'
                android:textSize="@dimen/sp_14" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dp_2"
                android:indeterminateTint="?attr/colorPrimary" />
        </FrameLayout>
    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
